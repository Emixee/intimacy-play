rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================
    // FONCTIONS UTILITAIRES
    // ============================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidGender(gender) {
      return gender in ['homme', 'femme'];
    }
    
    function isValidIntensity(level) {
      return level is int && level >= 1 && level <= 4;
    }
    
    function isValidSessionStatus(status) {
      return status in ['waiting', 'active', 'completed', 'abandoned'];
    }
    
    function isValidPlayerRole(role) {
      return role in ['creator', 'partner'];
    }
    
    function isSessionMember(sessionData) {
      return request.auth.uid == sessionData.creatorId || 
             request.auth.uid == sessionData.partnerId;
    }
    
    // ============================================================
    // COLLECTION: users
    // ============================================================
    
    match /users/{userId} {
      // Lecture : propriétaire OU partenaire dans une session active
      // Permet de vérifier le statut premium du partenaire
      allow read: if isOwner(userId) || isPartnerInActiveSession(userId);
      
      allow create: if isOwner(userId) &&
        isValidGender(request.resource.data.gender) &&
        request.resource.data.email == request.auth.token.email;
      
      // MODIFIÉ: Permettre la modification de l'email et du genre
      // - L'email DOIT correspondre à l'email du token Firebase Auth (après updateEmail)
      // - Le genre doit être valide (homme/femme)
      // - createdAt ne peut jamais être modifié
      allow update: if isOwner(userId) &&
        request.resource.data.email == request.auth.token.email &&
        request.resource.data.createdAt == resource.data.createdAt &&
        isValidGender(request.resource.data.gender);
      
      allow delete: if isOwner(userId);
    }
    
    // Fonction pour vérifier si l'utilisateur actuel est partenaire de userId dans une session active
    // Note: Cette fonction est simplifiée - pour une vraie vérification, utiliser Cloud Functions
    function isPartnerInActiveSession(userId) {
      // Pour des raisons de performance, on autorise la lecture si l'utilisateur est authentifié
      // La vraie vérification de session se fait côté application
      // TODO: Implémenter une vérification plus stricte via Cloud Functions si nécessaire
      return isAuthenticated();
    }
    
    // ============================================================
    // COLLECTION: sessions (SIMPLIFIÉ POUR DEBUG)
    // ============================================================
    
    match /sessions/{sessionCode} {
      
      // Lecture : tout utilisateur authentifié
      allow read: if isAuthenticated();
      
      // Création : utilisateur authentifié - RÈGLES SIMPLIFIÉES
      allow create: if isAuthenticated() &&
        request.resource.data.creatorId == request.auth.uid &&
        isValidGender(request.resource.data.creatorGender) &&
        request.resource.data.status == 'waiting' &&
        isValidIntensity(request.resource.data.startIntensity);
      
      // Mise à jour : créateur ou partenaire
      allow update: if isAuthenticated() &&
        (
          resource.data.creatorId == request.auth.uid ||
          resource.data.partnerId == request.auth.uid ||
          (resource.data.status == 'waiting' && resource.data.partnerId == null)
        );
      
      // Suppression : créateur uniquement
      allow delete: if isAuthenticated() && 
        resource.data.creatorId == request.auth.uid;
      
      // Messages
      match /messages/{messageId} {
        allow read: if isAuthenticated() &&
          isSessionMember(get(/databases/$(database)/documents/sessions/$(sessionCode)).data);
        
        allow create: if isAuthenticated() &&
          isSessionMember(get(/databases/$(database)/documents/sessions/$(sessionCode)).data) &&
          request.resource.data.senderId == request.auth.uid;
        
        allow update: if isAuthenticated() &&
          isSessionMember(get(/databases/$(database)/documents/sessions/$(sessionCode)).data);
        
        allow delete: if false;
      }
    }
    
    // ============================================================
    // COLLECTION: userChallenges (Défis créés par utilisateurs)
    // ============================================================
    
    match /userChallenges/{challengeId} {
      // Lecture : créateur du défi uniquement (les admins via Cloud Functions)
      allow read: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
      
      // Création : utilisateur authentifié
      allow create: if isAuthenticated() && 
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.moderationStatus == 'pending';
      
      // Mise à jour : interdit côté client (modération via Cloud Functions)
      allow update: if false;
      
      // Suppression : interdit
      allow delete: if false;
    }
    
    // ============================================================
    // COLLECTION: challenges
    // ============================================================
    
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ============================================================
    // RÈGLE PAR DÉFAUT
    // ============================================================
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
